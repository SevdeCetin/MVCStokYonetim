@model MvcStok.Models.Entity.TBLSATISLAR
@{
    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<form class="form-group" method="post">
    <div>
        <label>ÜRÜN ID:</label>
        @Html.TextBoxFor(m => m.URUN, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.URUN, "", new { @style = "color:blue" })
    </div>
    <div>
        <label>MÜŞTERİ ID:</label>
        @Html.TextBoxFor(m => m.MUSTERI, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERI, "", new { @style = "color:blue" })
    </div>
    <div>
        <label>ADET: </label>
        @Html.TextBoxFor(m => m.ADET, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ADET, "", new { @style = "color:blue" })
    </div>
    <div>
        <label>FİYAT:</label>
        @Html.TextBoxFor(m => m.FIYAT, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FIYAT, "", new { @style = "color:blue" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('İşleminiz gerçekleştirildi.');
        });
    </script>
</form>



